# ===============================
# Airflow Core Configuration
# ===============================

# Airflow Fernet key (used for encrypting connections & variables)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=your_fernet_key_here

# Airflow Webserver secret key
AIRFLOW_WEBSERVER_SECRET_KEY=your_webserver_secret_here


# ===============================
# Airflow Admin User (Initial Setup)
# ===============================

AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com


# ===============================
# Database: Neon PostgreSQL
# ===============================

# Neon connection settings
PGHOST=your-neon-hostname.neon.tech
PGPORT=5432
PGDATABASE=neondb
PGUSER=neondb_owner
PGPASSWORD=your_neon_password_here
PGSSLMODE=require

# Optional: unified connection string (if used in ETL scripts)
NEON_CONN_STR=postgresql://neondb_owner:your_neon_password_here@your-neon-hostname.neon.tech:5432/neondb?sslmode=require


# ===============================
# dbt Configuration
# ===============================

# dbt profiles directory inside container
DBT_PROFILES_DIR=/opt/airflow/analytics_platform

# dbt target profile name (must match profiles.yml)
DBT_TARGET=dev


# ===============================
# Runtime / Environment
# ===============================

# Used to distinguish local / codespaces / prod
ENVIRONMENT=local

# Python behavior
PYTHONUNBUFFERED=1